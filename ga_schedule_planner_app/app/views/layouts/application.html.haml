%html
  %head
    %title Ga Schedule Planner App
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #page

      %nav.navbar
        %ul.left-nav
          %h4 Admin
          %li Dashboard
          %li= link_to('Users', users_path)
          %li= link_to('User Authorizations', authorizations_path)
          %li= link_to('Roles', roles_path)
          
          %h4 Your Learning
          %li Dashboard
          %li= link_to('Courses', courses_path)
          %li= link_to('Lessons', lessons_path)
          
          %h4 Your Coaching
          %li Dashboard
          %li Your Timetable
          %li Your Learners
          %li Resources
          %li 

          %h4 Management
          %li Dashboard
          %li= link_to('Classrooms', classrooms_path)
          %li= link_to('Student Enrollments', enrollments_path)
          %li= link_to('Bookings', bookings_path)
          %li= link_to('Instructor Allocations', allocations_path)
          
          %h4 Facilities Management
          %li Dashboard
          %li Classroom Bits Planning
          %li Change Overs
          %Li Forward Planning

        %ul.right-nav
          %li
            - if current_user
              logged in as #{current_user.first_name} ,
              = link_to 'Logout', logout_path, method: :delete
            -else
              = link_to "Login", login_path
              or
              = link_to "Sign up", signup_path
        .clear


      %section#main
        %h1 GA inna da Reggae

        = yield

        .footer
          %ul
            %li Terms of Service
            %li Privacy Policy/Your Privacy Rights